

<RadzenDropDown Style="width: 100%; text-align: center;"
                Change="setResort"
                @bind-Value=@selectedResortId
                Data=@resorts
                TValue="Guid"
                TextProperty="name"
                ValueProperty="id" AllowFiltering="true" Name="DropDownResorts">
</RadzenDropDown>

@inject IDbContextFactory<ApplicationDbContext> contextFactory
@code {

    [CascadingParameter]
    public Resort[]? resorts { get; set; }

    [CascadingParameter]
    private Guid selectedResortId { get; set; }

    private Resort selectedResort;

    [Parameter] 
    public EventCallback<Guid> onResortChanged { get; set; }

    protected async Task setResort() => await onResortChanged.InvokeAsync(selectedResortId);

}
