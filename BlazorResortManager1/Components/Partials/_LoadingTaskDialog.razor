@inject IStringLocalizer<AppLanguage> local

<RadzenStack Orientation="Radzen.Orientation.Vertical" Style="width: 100%">
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn><p>Resort Manager Icon</p></RadzenColumn>
    </RadzenRow>
    @if(displayMessage is not null)
    {
    <RadzenRow>
        <RadzenColumn>@local[displayMessage]</RadzenColumn>
    </RadzenRow>
    }
    <RadzenRow>
        <RadzenColumn>
            <RadzenProgressBar ProgressBarStyle="ProgressBarStyle.Primary" Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code {
    [Parameter]
    public string displayMessage { get; set; }

}
