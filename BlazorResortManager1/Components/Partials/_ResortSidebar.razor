@inject NavigationManager NavigationManager

<RadzenPanelMenu Style="width: 100%;" Multiple="false" class="rz-background-color-base-100">
    @foreach(var page in pages)
    {
        <RadzenPanelMenuItem Text="@(page.title)" Path="@(page.url)" 
        class="rz-border-radius-6" Style="text-align: center" />
    }
</RadzenPanelMenu>
    

@code {
    private string pageUrl = string.Empty;
    private List<pageInfo> pages = new List<pageInfo>()
    {
        new pageInfo{ url = "resort", title = "Resort"},
        new pageInfo{ url = "resort/track", title="Tracks"},
        new pageInfo{ url = "resort/lift", title="Lifts"},
        new pageInfo{ url = "resort/status", title="Statuses"},    
    };

    protected override void OnInitialized() => pageUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);

    private async void changePage(string url)
    {
        await Task.Delay(200);
        NavigationManager.NavigateTo(url);
    }  

    private class pageInfo
    {
        public string url { get; set; }
        public string title { get; set; }
    }
}
