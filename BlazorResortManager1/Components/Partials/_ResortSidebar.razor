@inject NavigationManager NavigationManager

<RadzenPanelMenu Style="width: 100%;" Multiple="false">
    @* class="rz-background-color-base-100" *@
    @foreach(var page in pages)
    {
        <RadzenPanelMenuItem Text="@(page.title)" Path="@(page.url)" 
        Style="text-align: center" />
    @* class="rz-border-radius-6" *@
    }

</RadzenPanelMenu>

<AuthorizeView Roles="Admin">
    <Authorized>
        <br />
        <hr />
        <RadzenPanelMenu Style="width: 100%;" Multiple="false">
            <RadzenPanelMenuItem Text="Approve resorts" Path="resort/unapproved" Style="text-align: center" />
            <RadzenPanelMenuItem Text="Register users" Path="account/register" Style="text-align: center" />
        </RadzenPanelMenu>
    </Authorized>
</AuthorizeView>
    

@code {
    private string pageUrl = string.Empty;
    private List<pageInfo> pages = new List<pageInfo>()
    {
        new pageInfo{ url = "resort/track", title="Tracks"},
        new pageInfo{ url = "resort/lift", title="Lifts"},
        new pageInfo{ url = "resort/status", title="Statuses"}, 
        new pageInfo{ url = "/resort/camera", title="Cameras"}
    };

    protected override void OnInitialized() => pageUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);

    private async void changePage(string url)
    {
        await Task.Delay(200);
        NavigationManager.NavigateTo(url);
    }  

    private class pageInfo
    {
        public string url { get; set; }
        public string title { get; set; }
    }
}
